/* components/recommend/cmp.wxss */
.container{
    width:700rpx;
    display:flex;
    flex-direction: column;
    align-items: center;
    padding:0 10rpx;
    justify-content: center;
    
}
.big-title{
    font-size:40rpx;
    letter-spacing: 2rpx;
    padding:10rpx 0;
}
.title{
    font-size:24rpx;
    padding:10rpx 0;
}
.image, .skeleton{
    width:700rpx;
    height:750rpx;
    margin-top:50rpx;
    margin-bottom:20rpx;
}
.skeleton{
    position: relative;
    background-color:rgba(0,0,0,.3)
}
.loader{
    position: absolute;
    top:50%;
    left:50%;
    margin-left:-20rpx;
    margin-top:-20rpx;
    width:40rpx;
    height:40rpx;
    border:10px solid #888;
    border-radius: 50%;
    border-bottom-color:transparent;
    animation: loader 1s linear infinite;
}
@keyframes loader{
    0%{
        transform:rotate(0deg)
    }
    100%{
        transform: rotate(360deg)
    }
}