<view class="container">
    <view>
        <video class="video" id="{{videoId}}" src="{{src}}" hidden="{{showPoster}}" bindended="onVideoEnd"></video>
        <view class="posterBox" hidden="{{!showPoster}}">
            <image class="poster" src="{{poster}}" ></image>

            <view class="controler" catchtap='onTap' >
                <image class="image" src=""></image>
                <text class="duration">{{duration}}</text>
            </view>
        </view>
    </view>
    <view class="textContainer">
        <text>{{mainText}}</text>
    </view>
    <view class="mask" hidden="{{showPoster}}" catchtap="onMaskTap"></view>
</view>