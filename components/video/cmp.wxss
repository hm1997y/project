.container{
    width:700rpx;
    
}
.video{
    width:700rpx;
    height:400rpx;
}
.posterBox{
    position: relative;
    width:700rpx;
    height:400rpx;
}
.poster{
    width:100%;
    height:100%;
}
.controler{
    position: absolute;
    top:50%;
    left:50%;
    margin-top:-50rpx;
    margin-left:-50rpx;
    width:100rpx;
    height:100rpx;
    display:flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background-color:rgba(0, 0, 0, .5);
    border-radius: 50%;
}
.image{
    width:30rpx;
    height:30rpx;
}
.duration{
    font-size:24rpx;
    color:#fff;
}
.textContainer{
    font-size:40rpx;
    letter-spacing: 2rpx;
    margin-top:20rpx;
}
.mask{
    position: fixed;
    top:0;
    left:0;
    right:0;
    bottom:0;
    background-color:rgba(0, 0, 0, .5)
}
