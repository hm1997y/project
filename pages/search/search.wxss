/* pages/search/search.wxss */
.recommend-container{
    width:700rpx;
    margin:50rpx auto;
    padding:60rpx 20rpx;
    border-top:1px solid #000;
    border-bottom:1px solid #000;
    box-sizing: border-box;
}
.text{
    font-size:40rpx;
}
.recommend-list{
    font-size:28rpx;
}

.loading-container{
    position: fixed;
    top:0;
    left:0;
    width:100%;
    height:100%;
    background-color:#fff;
  }
  .loader{
    position: absolute;
    top:50%;
    left:50%;
    margin-top:-30rpx;
    margin-left:-30rpx;
  }